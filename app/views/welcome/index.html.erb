<div class="container-fluid">

	<div class="row">
		<section class="hero">
			<div class="hidden-xs slogan">
				<h1>I haven't been everywhere, but it's on my list.</h1>
				<p>- Susan Sontag</p>
			</div>
			<div class="hidden-sm hidden-md hidden-lg slogan">
				<h2>Hike Forward</h2>
			</div>
		</section>
	</div>

	<div class="row main-btn-wrapper">
		<div class="container">
			<a href="<%= hikes_path %>" class="col-xs-4 main-btn">
				<div class="row">
					<div class="col-xs-12 col-md-2">
						<h1><span class="glyphicon glyphicon-record" aria-hidden="true"></span></h1>
						<h5 class="hidden-md hidden-lg">Browse</h5>
					</div>
					<div class="main-btn-txt hidden-xs hidden-sm col-md-10">
						<h3>Start Exploring</h3>
						<p>Browse hikes around your area</p>
					</div>
				</div>
			</a>
			<a href="" id="seek-hike-name" class="col-xs-4 main-btn">
				<div class="row">
					<div class="col-xs-12 col-md-2">
						<h1><span class="glyphicon glyphicon-map-marker" aria-hidden="true"></span></h1>
						<h5 class="hidden-md hidden-lg">Search</h5>
					</div>
					<div class="main-btn-txt hidden-xs hidden-sm col-md-10">
						<h3>Seek Adventure</h3>
						<p>Find a trail by name <span class="caret"></p>
					</div>
				</div>
			</a>
			<a href="<%= new_user_path %>" class="col-xs-4 main-btn">
				<div class="row">
					<div class="col-xs-12 col-md-2">
						<h1><span class="glyphicon glyphicon-globe" aria-hidden="true"></span></h1>
						<h5 class="hidden-md hidden-lg">Join</h5>
					</div>
					<div class="main-btn-txt hidden-xs hidden-sm col-md-10">
						<h3>Get Started</h3>
						<p>Join our community</p>
					</div>
				</div>
			</a>
		</div>
	</div>

	<div id="search-hike-name" class="row main-btn-wrapper">
		<div class="container">
			<form>
				<div class="col-xs-12 form-group">
	        <%= text_field_tag :search_name, nil, class: "form-control", placeholder: "Enter hike name here..." %>
	      </div>
			</form>
		</div>	
	</div>

	<div class="container">
		<div class = "row">

			<div class = "col-xs-12 col-md-6">
				<div class="feature-wrapper">
					<div class="row feature-title">
						<h2> Featured Hike </h2>
					</div>
					<div class="row">
						<div class="col-xs-4">
							<div class="img-circle">
							 	<img alt="Featured Hike" src="/media/mountains.png">
							</div>
						</div>
						<div class="col-xs-8">
							<h4><%= link_to @featured.name, hike_path(@featured) %></h4>
						 	<p><%= truncate(@featured.description, :omission => "...", :length => 150) %></p>
						 	<p>Distance <strong><%= @featured.distance_in_km %> km</strong></p>
						</div>
					</div>
				</div>
			</div>

			<div class="col-xs-12 col-md-6">
				<div class="feature-wrapper">
					<div class="row feature-title">
						<h2> Top Rated Hike</h2>
					</div>
					<div class="row">
						<div class= "col-xs-4">
						 	<div class="img-circle">
						 		<img alt="Top Rated Hike" src="/media/compass.png">
						 </div>
						</div>

						<div class="col-xs-8">
							<h4><%= link_to @top_rated.name, hike_path(@top_rated) %></h4>
							<p><%= truncate(@top_rated.description, :omission => "...", :length => 150) %></p>
							<p>Distance <strong><%= @top_rated.distance_in_km %> km</strong></p>
						</div>
					</div>
				</div>
			</div>

		</div>
	
		<div class = "row">
			<div class="col-xs-12">
				<center class="testimonials">
					<h1 class="testimonial-title">Testimonials</h1>
					<h3>"I'd probably use this app if I had time to hike"</h3>
					<p> - James Sapara</p>
					<h3>"Sweet!"</h3>
					<p>- Mike Conlin</p>
				</center>
			</div>
		</div>
		<hr/>

 		<div class="row">
			<div class="col-xs-12">
				<center>
					<h1> Twitter 
						<img src="https://cdn0.iconfinder.com/data/icons/shift-logotypes/32/Twitter-128.png" 
						style="width: 30px; height: 30px;"/> 
					</h1>
					<a class="twitter-timeline"
					href="https://twitter.com/hashtag/takeahike"
					data-widget-id="733385150591946752"
					data-tweet-limit="2">#takeahike Tweets</a>
				</center>
				<hr/>
			</div>

	
		</div>

		<div class="row instagram-feed">
			<div class="col-xs-12">
				<h1>
				<a href="https://www.instagram.com/explore/tags/takeahike/" class=instagram-header>#takeahike</a> 
				on Instagram
				<img src="https://cdn0.iconfinder.com/data/icons/shift-logotypes/32/Instagram-512.png" 
					style="width: 25px; height:25px"/> 
				</h1>
				<iframe src="//lightwidget.com/widgets/e39362d88cda51a88eee9f13cafa2c4b.html"
				id="lightwidget_e39362d88c"
				name="lightwidget_e39362d88c"
				scrolling="no"
				allowtransparency="true"
				class="lightwidget-widget"
				style="width: 100%; border: 0; overflow: hidden;">
				</iframe>
			</div>
		</div>
	</div>

</div>

