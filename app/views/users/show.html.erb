<div id="profile-page">
<div id="" class="container-fluid">

  <div id="profile-header" class="row">

    <div id="user-avatar" class="col-xs-4 col-sm-2 col-lg-2">
      <br>
      <%= link_to image_tag('avatar.png', width: '75', height: '75', id: '#', alt: 'user avatar') %>
    </div>

    <div id="user-name" class="col-xs-10 col-sm-10 col-lg-10">
      <h3><%= @user.full_name %></h3>
        <h4><span class="glyphicon glyphicon-signal"></span> 
          <%= @user.hiker_level.upcase %> </h4>
        <h4><span class="glyphicon glyphicon-dashboard"></span>
          <%= @user.kms_hiked %> kms </h4>
    </div>

  </div> <!-- end of row -->


 

  <!-- Collapsible panel -->

<div class="row">

  <div class="col-xs-6 col-sm-4 panel-group">

    <div class="panel panel-default">
      <div id="collapse2" class="panel-collapse collapse">
        <ul class="list-group">
          <% @completed_hikes.each do |hike| %>
            <li class="list-group-item">
              <%= link_to hike.hike.name, hike_path(hike.hike_id) %>
              <%= button_to "Delete", hike_completed_hike_path(hike.hike_id, hike.id), method: :delete %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>

  <div class="col-xs-6 col-sm-4 panel-group">
    <div class="panel panel-default">
      <div id="collapse3" class="panel-collapse collapse">
        <ul class="list-group">
          <% @fave_hikes.each do |hike| %>
            <li class="list-group-item">
              <%= link_to hike.hike.name, hike_path(hike.hike_id) %>
              <%= button_to "Delete", hike_fave_hike_path(hike.hike_id, hike.id), method: :delete %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>

  <div class="col-xs-6 col-sm-4 panel-group">
    <div class="panel panel-default">
      <div id="collapse4" class="panel-collapse collapse">
        <ul class="list-group">
          <% @user.reviews.each do |review| %>
            <li class="list-group-item">
              <%= link_to review.hike.name, hike_path(review.hike_id) %>: "<%= review.comment %>", Rating: <%= review.rating %>
              <%= button_to "Delete", hike_review_path(review.hike_id, review.id), method: :delete %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>

</div>

  <!-- End collapse panel -->

  <!-- New Tab Panels -->

  <div class="row">

    <div class="col-md-12">
      <div class="panel with-nav-tabs panel-default">
        <div class="panel-heading">
          <ul class="nav nav-tabs">

            <li class="active">
              <a href="#tab1" data-toggle="tab">
                <div class="row">
                  <div class="col-md-2 hidden-xs hidden-sm"></div>
                  <div class="col-xs-12 col-md-2">
                    <h3><span class="glyphicon glyphicon-ok" aria-hidden="true"></span></h3>
                  </div>
                  <div class="main-btn-txt hidden-xs hidden-sm col-md-8">
                    <h4>Completed Hikes</h4>
                  </div>
                </div>
              </a>
            </li>

            <li>
              <a href="#tab2" data-toggle="tab">
                <div class="row">
                  <div class="col-md-2 hidden-xs hidden-sm"></div>
                  <div class="col-xs-12 col-md-2">
                    <h3><span class="glyphicon glyphicon-heart" aria-hidden="true"></span></h3>
                  </div>
                  <div class="main-btn-txt hidden-xs hidden-sm col-md-8">
                    <h4>Favourite Hikes</h4>
                  </div>
                </div>
              </a>
            </li>
                      
            <li>
              <a href="#tab3" data-toggle="tab">
                <div class="row">
                  <div class="col-md-2 hidden-xs hidden-sm"></div>
                  <div class="col-xs-12 col-md-2">
                    <h3><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></h3>
                  </div>
                  <div class="main-btn-txt hidden-xs hidden-sm col-md-8">
                    <h4>Reviews</h4>
                  </div>
                </div>
              </a>
            </li>

          </ul>
          </div>
          <div class="panel-body">
              <div class="tab-content">
                  <div class="tab-pane fade in active" id="tab1">Completed Hikes...</div>
                  <div class="tab-pane fade" id="tab2">Fave Hikes...</div>
                  <div class="tab-pane fade" id="tab3">Reviews...</div>
              </div>
          </div>
      </div>
    </div>
  </div>

  <!-- End of new panel -->

</div>
</div>

