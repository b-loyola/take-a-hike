<div id="profile-page">
<div id="" class="container-fluid">

  <div id="profile-header" class="row">

    <div id="user-avatar" class="col-xs-4 col-sm-2 col-lg-2">
      <br>
      <%= link_to image_tag('avatar.png', width: '75', height: '75', id: '#', alt: 'user avatar') %>
    </div>

    <div id="user-name" class="col-xs-14 col-sm-10 col-lg-10">
      <h3><%= @user.full_name %></h3>
      <div>
        <h5>(Insert funny hiker level here)</h5>
        <br>
        <h5>Total KMs Hiked = <%= @user.kms_hiked %></h5>
      </div>
    </div>

  </div> <!-- end of row -->


  <div class="row main-btn-wrapper">
    <div class="container-fluid">

      <a data-toggle="collapse" href="#collapse2" class="col-xs-4 main-btn">
        <div class="row">
          <div class="col-md-2 hidden-xs hidden-sm"></div>
          <div class="col-xs-12 col-md-2">
            <h1><span class="glyphicon glyphicon-ok" aria-hidden="true"></span></h1>
            <h4 class="hidden-md hidden-lg">Completed</h4>
          </div>
          <div class="main-btn-txt hidden-xs hidden-sm col-md-8">
            <h3>Completed Hikes</h3>
            <p>See How Far You've Come</p>
          </div>
        </div>
      </a>

      <a data-toggle="collapse" href="#collapse3" class="col-xs-4 main-btn">
        <div class="row">
          <div class="col-md-2 hidden-xs hidden-sm"></div>
          <div class="col-xs-12 col-md-2">
            <h1><span class="glyphicon glyphicon-heart" aria-hidden="true"></span></h1>
            <h4 class="hidden-md hidden-lg">Favourites</h4>
          </div>
          <div class="main-btn-txt hidden-xs hidden-sm col-md-8">
            <h3>Favourite Hikes</h3>
            <p>Easy Access to Your Faves</p>
          </div>
        </div>
      </a>

      <a data-toggle="collapse" href="#collapse4" class="col-xs-4 main-btn">
        <div class="row">
          <div class="col-md-2 hidden-xs hidden-sm"></div>
          <div class="col-xs-12 col-md-2">
            <h1><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></h1>
            <h4 class="hidden-md hidden-lg">Reviews</h4>
          </div>
          <div class="main-btn-txt hidden-xs hidden-sm col-md-8">
            <h3>My Reviews</h3>
            <p>View My Ratings</p>
          </div>
        </div>
      </a>

    </div>
  </div>


  <!-- Collapsible panel -->

<div class="row">

  <div class="col-xs-6 col-sm-4 panel-group">

    <div class="main-btn-txt hidden-xs hidden-sm col-md-8">
      <h3>My Reviews</h3>
      <p>View My Ratings</p>
    </div>

    <div class="panel panel-default">
      <div id="collapse2" class="panel-collapse collapse">
        <ul class="list-group">
          <% @completed_hikes.each do |hike| %>
            <li class="list-group-item">
              <%= link_to hike.hike.name, hike_path(hike.hike_id) %>
              <%= button_to "Delete", hike_completed_hike_path(hike.hike_id, hike.id), method: :delete %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>

  <div class="col-xs-6 col-sm-4 panel-group">
    <div class="panel panel-default">
      <div id="collapse3" class="panel-collapse collapse">
        <ul class="list-group">
          <% @fave_hikes.each do |hike| %>
            <li class="list-group-item">
              <%= link_to hike.hike.name, hike_path(hike.hike_id) %>
              <%= button_to "Delete", hike_fave_hike_path(hike.hike_id, hike.id), method: :delete %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>

  <div class="col-xs-6 col-sm-4 panel-group">
    <div class="panel panel-default">
      <div id="collapse4" class="panel-collapse collapse">
        <ul class="list-group">
          <% @user.reviews.each do |review| %>
            <li class="list-group-item">
              <%= link_to review.hike.name, hike_path(review.hike_id) %>: "<%= review.comment %>", Rating: <%= review.rating %>
              <%= button_to "Delete", hike_review_path(review.hike_id, review.id), method: :delete %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>

</div>

  <!-- End collapse panel -->

</div>
</div>
