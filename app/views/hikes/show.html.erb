<script src="https://www.google.com/jsapi"></script>


<%= link_to "Back to all hikes", hikes_path %><br/>

<div class="container-fluid">
  <div class="row">
    
    <div class="col-xs-6">
      <div class="well">
        <h2><%= link_to @hike.name, hike_path(@hike) %></h2>
        <h4><%= pluralize(@hike.distance_in_km, 'Km') %> </h4>
        <h4><%= pluralize(@hike.time_in_hours, 'Hour') %></h4>
        <h4>Difficulty Rating:<%= @hike.difficulty_description %></h4>
        <h4><%=@hike.seasons%></h4>
        <h4> Description </h4>
        <p><%= @hike.description %></p>

      </div>
      
      <div class="well">
        <h3>Current Weather:</h3>
        <div id="results-container">
          <ul id="result-list">
          </ul>
        </div>
      </div>
    
      <div class="well">
        <%= render partial: 'review' %>
      </div>
    </div>

    <div class="col-xs-6">
      <div class="well">
        <div class="fixed_map">
        	<div id="map"></div>
        </div>
        <div class="fixed_graph">
          <div id="elevation_chart"></div>
        </div>
      </div>
    </div>

  </div>
</div>

<script>
  google.load('visualization', '1', {packages: ['columnchart']});
</script>






<script type="text/javascript">
  var hikeCoordinates = <%=@hike_waypoints%>
</script>

<%= javascript_include_tag 'hikes/show.js' %>
<%= javascript_include_tag 'hikes/weather.js' %>

