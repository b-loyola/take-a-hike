<div>

  <div><%= link_to "Rate this hike!", new_hike_review_path(@hike) %></div>

  <% @hike.reviews.each do |review| %>
    <div>
      <%= link_to review.user.full_name, user_path(review.user.id) %>:
      (<%= review.id %>) Rating: <%= review.rating %>, Comment: <%= review.comment %>
    </div>
  <% end %>

</div>






