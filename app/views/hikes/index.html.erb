<div class="container-fluid">

	<div class="row">
		<section class="fixed_map">
			<div id="map"></div>
		</section>
	</div>

	<%= render 'search' %>

	<div class="row">
		<div class="container">
			<table id="searched_hikes" class="table table-hover">
				<thead>
					<tr>

						<th>Hike Name <span class="glyphicon glyphicon-sort" aria-hidden="true" style="font-size: 10px"></span></th>
						<th>Distance <span class="glyphicon glyphicon-sort" aria-hidden="true" style="font-size: 10px"></span></th>
						<th>Time <span class="glyphicon glyphicon-sort" aria-hidden="true" style="font-size: 10px"></span></th>
						<th>Difficulty <span class="glyphicon glyphicon-sort" aria-hidden="true" style="font-size: 10px"></span></th>

					</tr>
				</thead>
				<tbody>
			  	<%#= render @hikes %>
				</tbody>
			</table>
		</div>
	</div>

	<%#= paginate(@hikes) %>

</div>
<%= javascript_include_tag 'jquery.dataTables.min' %>
<%= javascript_include_tag 'hikes/hikes_search.js' %>
<%= javascript_include_tag 'hikes/index.js' %>

